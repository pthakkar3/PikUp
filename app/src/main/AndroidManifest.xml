<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pikup">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.WelcomeScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.RegistrationActivity" />
        <activity android:name=".ui.HomeScreenActivity" />
        <activity android:name=".ui.UserProfileActivity" />
        <activity android:name=".ui.ForgotPasswordActivity" />
        <activity android:name=".ui.HostActivity" />
        <activity android:name=".ui.JoinListActivity"></activity>
    </application>

</manifest>